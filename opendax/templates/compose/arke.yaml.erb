
services:
  arke:
    image: "<%= @utils['images']['arke'] %>"
    volumes:
      - ../config/arke:/home/app/config
    command: ./bin/arke start
    labels:
      traefik.enable: true
      traefik.http.routers.arke.rule: "Host(`arke.<%= @config['app']['domain'] %>`)"
      traefik.http.services.arke.loadbalancer.server.port: 8082
